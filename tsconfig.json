{
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Types
    "types": ["node", "@playwright/test"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // React (if you need it for frontend code in same repo)
    "jsx": "react-jsx",

    // Module behavior
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "tests",
    "steps",
    "features",
    "support"
  ]
}
